<p id="notice"><%= notice %></p>

<h1>Bids</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Project site</th>
      <th>Sku</th>
      <th>Bid status</th>
      <th>Bid date</th>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.company_id %></td>
        <td><%= bid.project_site_id %></td>
        <td><%= bid.sku_id %></td>
        <td><%= bid.bid_status_id %></td>
        <td><%= bid.bid_date %></td>
        <td><%= bid.description %></td>
        <td><%= bid.amount %></td>
        <td><%= link_to 'Show', bid %></td>
        <td><%= link_to 'Edit', edit_bid_path(bid) %></td>
        <td><%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

