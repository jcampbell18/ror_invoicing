<p id="notice"><%= notice %></p>

<h1>Bid Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bid_statuses.each do |bid_status| %>
      <tr>
        <td><%= bid_status.name %></td>
        <td><%= link_to 'Show', bid_status %></td>
        <td><%= link_to 'Edit', edit_bid_status_path(bid_status) %></td>
        <td><%= link_to 'Destroy', bid_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

