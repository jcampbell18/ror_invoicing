<%= form_with(model: state) do |form| %>
  <% if state.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(state.errors.count, "error") %> prohibited this state from being saved:</h2>

      <ul>
        <% state.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <li>
      <p class="heading">
        <%= form.label :name %>
      </p>
    </li>
    <li>
      <%= form.text_field :name %>
    </li>
  </ul>

  <ul>
    <li>
      <p class="heading">
        <%= form.label :abbreviation %>
      </p>
    </li>
    <li>
      <%= form.text_field :abbreviation %>
    </li>
  </ul>

  <ul class="">
    <li class="one-col button-end actions">
      <%= form.submit %>
    </li>
  </ul>
<% end %>
